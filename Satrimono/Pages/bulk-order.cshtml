@page
@model BulkOrderModel
@{
    ViewData["ActiveIndex"] = 3;
    ViewData["Title"] = "Bulk Order";
    ViewData["Description"] = "We have special discounts for orders of 10 or more books.";
    ViewData["Keywords"] = "book, spiritual books, universe, laws of the universe, soul purpose, spiritual laws, life purpose, spiritual transformation, knowledge, universal truth, metatron";
}
<div class="text-center">
    <h3>We have special discounts for orders of 10 or more books.</h3>
</div>
<div class="row">
    <div class="col-sm-8 col-sm-push-2">
        <div class="contact-form">
            <form method="post">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="Name" class="control-label required"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Email" class="control-label required"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="City" class="control-label required"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Country" class="control-label required"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="BookName" class="control-label required"></label>
                        <input asp-for="BookName" class="form-control" />
                        <span asp-validation-for="BookName" class="text-danger"></span>
                        @*<h3 class="mar-top-5 mar-btm-10">@Model.BookName</h3>*@
                    </div>
                    <div class="col-sm-4">
                        <label asp-for="Quantity" class="control-label required"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="Purpose" class="control-label required"></label>
                        <input asp-for="Purpose" class="form-control" />
                        <span asp-validation-for="Purpose" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Reference" class="control-label required"></label>
                        <input asp-for="Reference" class="form-control" />
                        <span asp-validation-for="Reference" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label asp-for="AdditionalInformation" class="control-label"></label>
                        <textarea asp-for="AdditionalInformation" class="form-control"></textarea>
                        <span asp-validation-for="AdditionalInformation" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <input type="submit" value="Send Message" class="btn btn-primary send-btn trs" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}